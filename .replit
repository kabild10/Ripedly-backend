modules = ["python-3.12"]
run = "python app.py"

[nix]
channel = "stable-24_05"
packages = ["cacert", "coreutils", "ffmpeg-full", "freetype", "geckodriver", "glibcLocales", "imagemagickBig", "lcms2", "libGL", "libffi", "libimagequant", "libjpeg", "libtiff", "libwebp", "libxcrypt", "openjpeg", "pkg-config", "tcl", "tk", "zlib"]

[deployment]
run = ["sh", "-c", "python app.py"]

[workflows]
runButton = "Run Flask App"

[[workflows.workflow]]
name = "Run with Gunicorn"
author = 43640679
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "gunicorn --bind 0.0.0.0:8000 --workers 4 --timeout 300 app:app"

[[workflows.workflow]]
name = "Run Flask App"
author = 43640679
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"

[[ports]]
localPort = 5000
externalPort = 80
